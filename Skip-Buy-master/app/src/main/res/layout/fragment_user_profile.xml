<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gurpartap.skip_and_buy.Controller.UserProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="200dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:weightSum="1">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profileImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="0.32"
                android:layout_marginLeft="100dp"
                android:src="@drawable/iconuserdefault"
                app:civ_border_width="2dp"
                android:layout_gravity="center"
                app:civ_border_color="#FFFFFF"/>

            <android.support.design.widget.FloatingActionButton
                android:layout_height="31dp"
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_menu_camera"
                android:id="@+id/changeImageButtton"
                android:layout_marginTop="55dp"
                android:onClick="selectProfilePicture"
                app:backgroundTint="@null"
                android:tint="@color/colorAccent"
                android:layout_width="31dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">


            <EditText
                android:text="Gurpartap Singh"
                android:layout_height="match_parent"
                android:id="@+id/nameProfile"
                android:layout_marginTop="0dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textStyle="normal|bold"
                android:textSize="20dp"
                android:layout_weight="0.89"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_width="140dp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <EditText
                android:layout_width="262dp"
                android:layout_height="60dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/emailProfile"
                android:layout_marginTop="30dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textCursorDrawable="@null"
                android:textColorHint="#000000"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:text="aulakh161@gmail.com" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="1">

            <EditText
                android:layout_width="262dp"
                android:layout_height="60dp"
                android:inputType="text|phone"
                android:ems="10"
                android:id="@+id/phoneProfile"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textCursorDrawable="@null"
                android:textColorHint="#000000"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:text="+ 647 527 1038" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="1">

            <EditText
                android:layout_width="262dp"
                android:layout_height="60dp"
                android:inputType="text|textPassword"
                android:ems="10"
                android:id="@+id/passwordProfile"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textCursorDrawable="@null"
                android:textColorHint="#000000"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:text="gurpartapSingh" />
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="1">

        <Button
            android:layout_width="150dp"
            android:text="SIGN OUT"
            android:id="@+id/loginButton"
            android:textColor="#ffffff"
            android:background="@color/colorAccent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_height="35dp"
            android:onClick="signOutActivity"
            android:textSize="20dp" />

        <Button
            android:layout_width="150dp"
            android:text="EDIT"
            android:id="@+id/editProfileButton"
            android:textColor="#ffffff"
            android:background="@color/colorAccent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:layout_height="35dp"
            android:textSize="20dp"
            android:layout_weight="0.50" />

        <Button
            android:layout_width="150dp"
            android:text="SAVE"
            android:id="@+id/saveProfileButton"
            android:textColor="#ffffff"
            android:background="@color/colorAccent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:layout_height="35dp"
            android:textSize="20dp"
            android:layout_weight="0.50" />


    </LinearLayout>
    </LinearLayout>
</FrameLayout>
