<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gurpartap.skip_and_buy.Controller.SignUpActivity"
    android:background="@color/colorAccent"
    android:id="@+id/signupScreen"
    >


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="none"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView3"
                android:src="@drawable/shoppingcart"
                android:layout_gravity="center"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Skip &amp; Buy"
                android:id="@+id/textView7"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:paddingLeft="0dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/nameText"
                android:layout_marginTop="30dp"
                android:textCursorDrawable="@null"
                android:hint="Name"
                android:textColorHint="@color/editTextField"
                android:textColor="@color/editTextField"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/emailText"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textColorHint="@color/editTextField"
                android:hint="Email"
                android:textCursorDrawable="@null"
                android:textColor="@color/editTextField"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/passwordText"
                android:layout_marginTop="20dp"
                android:textColorHint="@color/editTextField"
                android:textCursorDrawable="@null"
                android:hint="Password"
                android:textColor="@color/editTextField"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="text|phone"
                android:ems="10"
                android:id="@+id/phoneNumber"
                android:layout_marginTop="20dp"
                android:textColorHint="@color/editTextField"
                android:hint="Phone Number"
                android:textCursorDrawable="@null"
                android:textColor="@color/editTextField"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/acceptPolicyCheckBox"
                android:checked="false"
                android:layout_marginTop="15dp"
                android:text="By Signing up for Skip &amp; Buy, I agree to Skip &amp; Buy&apos;s policy."
                android:textColor="#ffffff"
                android:paddingLeft="10dp"
                android:textSize="16dp"
                android:buttonTint="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:id="@+id/signupButton"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorAccent"
                android:text="Sign Up"
                android:background="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20sp"
                android:layout_height="35dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Already a member/Sign In"
                android:id="@+id/button4"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:textStyle="bold|italic"
                android:onClick="signInActivity"
                android:background="@null"
                android:textSize="14dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
