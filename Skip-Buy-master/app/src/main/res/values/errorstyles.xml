<resources>

    <!-- Base application theme. -->
    <style name="ErrorTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlHighlight">#ff1300</item>
        <item name="colorControlActivated">#ff1300</item>
    </style>

    <style name="ErrorTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ErrorTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ErrorTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>